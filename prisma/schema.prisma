// schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  role      String     @default("USER") // Role: USER, ADMIN
  media     Media[]
  playlists Playlist[]
}

model Media {
  id                 Int       @id @default(autoincrement())
  original_file_name String
  file_name          String
  path               String
  format             String
  type               String
  size               Int
  uploaded_at        DateTime  @updatedAt()
  user_id            Int
  duration           Int
  position           Int
  user               User      @relation(fields: [user_id], references: [id])
  Playlist           Playlist? @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  playlistId         Int?
}

model Playlist {
  id      Int     @id @default(autoincrement())
  name    String
  user_id Int
  user    User    @relation(fields: [user_id], references: [id])
  medias  Media[] @relation
  Mode    Mode[]
}

model Accident {
  id                           Int      @id @default(autoincrement())
  days_without_accident        Int
  record_days_without_accident Int
  accidents_this_year          Int
  reset_on_new_year            Boolean
  last_updated                 DateTime @updatedAt()
}

model Mode {
  id          Int       @id @default(autoincrement())
  name        String?
  playlist_id Int?
  playlist    Playlist? @relation(fields: [playlist_id], references: [id])
}

model Settings {
  id                 Int      @id @default(autoincrement())
  standby            Boolean
  standby_start_time String
  standby_end_time   String
  restart_at         String
  date               DateTime @updatedAt()
  language           String
  theme              String
}

model Data {
  id    Int     @id @default(autoincrement())
  name  String?
  value String?
  type  String?
}